@{
    ViewData["Title"] = "Add Animal";
}

@model AnimalShelterClient.Models.Animal


<h3> Add a new Animal to the Shelter: </h3>

@using (Html.BeginForm())
{
  <p>@Html.LabelFor(model => model.Name):
  @Html.TextBoxFor(model => model.Name) </p>
  <p>@Html.LabelFor(model => model.Species):
  @Html.TextBoxFor(model => model.Species) </p>
  <p>@Html.LabelFor(model => model.Breed):
  @Html.TextBoxFor(model => model.Breed) </p>
  <p>@Html.LabelFor(model => model.Age):
  @Html.TextBoxFor(model => model.Age) </p>
  <br>
  <input type="submit" value="Add new animal" class="btn btn-primary"/>
}

<hr />

<p>@Html.ActionLink("Back to All Animals", "Index")</p>
