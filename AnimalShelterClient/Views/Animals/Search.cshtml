@{
  ViewData["Title"] = "Search";
}

@using AnimalShelterClient.Models;

<h3>Search for Animals: </h3>

@using (Html.BeginForm())
{

  <label for="category">Choose a parameter:</label>
  <select name="category" , id="category">
    <option value="name">Name</option>
    <option value="species">Species</option>
    <option value="breed">Breed</option>
    <option value="minimumAge">Minimum Age</option>
  </select>

  <label>Enter search text:</label>
  <input type="text" name="searchParam">
  <input type="submit" value="Search" class="btn btn-primary" />
}

@if (@Model.Count == 0)
{
  <p>No Search Results Yet</p>
}


  <ol>
    @foreach (Animal animal in Model)
    {
      <li><strong>@animal.Name</strong> the @animal.Species | <a href="/Animals/Details/@(animal.AnimalId)">View Details</a>
      </li>
    }
  </ol>

